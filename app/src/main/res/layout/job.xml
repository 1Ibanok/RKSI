<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/android_sma"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:ignore="MissingConstraints">

        <View
            android:id="@+id/rectangle_5"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@color/w_gray" />
        
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/undo_icon"
            android:onClick="onClickUndoActivity"/>

        <RelativeLayout
            android:id="@+id/frame_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="60dp"
            android:layout_alignParentBottom="true">

            <View
                android:id="@+id/rectangle_6"
                android:layout_height="380dp"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="9dp"
                android:background="@drawable/job_rectangle"
                android:layout_width="0dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Название Работ"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:textSize="40sp"
                android:fontFamily="@font/font"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/describtion"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="90dp"
                android:fontFamily="@font/font"
                android:text="Описание, adfqsdfadfasdfadfadfsadsfadfadfafdasdfafdadfadfsasdfasfdadfadfafdafdfasdfasdfadfsasdfasdfasdfadfпывапывапывапывапывапыавпывапыапыавпывап"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <ImageButton
                android:id="@+id/rectangle_7"
                android:layout_width="380dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="398dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/job_button"
                android:onClick="AcceptTiket"/>

        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>